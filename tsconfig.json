{
    "compilerOptions": {
        "composite": true,
        "declaration": true,

        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "ES2020"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "target",
        "preserveWatchOutput": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": [
        "examples/**/*.ts",
        "scripts/**/*.ts",
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "target"
    ]
}